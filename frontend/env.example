# =============================================================================
# API CONFIGURATION
# =============================================================================
# VITE_API_URL para Docker Compose (solo producci√≥n o pruebas en red interna)
# VITE_API_URL=http://backend:8000
# Para desarrollo local, NO definir VITE_API_URL para usar rutas relativas y el proxy de Vite.
# VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Production (update with your Railway backend URL)
# VITE_API_URL=https://your-backend-project-name-production.up.railway.app
# VITE_WS_URL=wss://your-backend-project-name-production.up.railway.app

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
VITE_APP_NAME=AI Agents System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Intelligent system with multiple specialized agents

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_AUDIO=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_AUTONOMOUS_ACTIONS=true
VITE_ENABLE_DATA_ANALYSIS=true

# =============================================================================
# UI CONFIGURATION
# =============================================================================
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_MAX_FILE_SIZE=10485760  # 10MB in bytes
VITE_MAX_MESSAGE_LENGTH=10000
VITE_MAX_OBJECTIVE_LENGTH=5000

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=3000
VITE_WS_HEARTBEAT_INTERVAL=30000

# =============================================================================
# API CONFIGURATION
# =============================================================================
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
VITE_CACHE_TTL=300000
VITE_CACHE_MAX_SIZE=100

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
VITE_GOOGLE_ANALYTICS_ID=your-ga-id-here
VITE_MIXPANEL_TOKEN=your-mixpanel-token-here
VITE_SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info
VITE_ENABLE_MOCK_DATA=false

# =============================================================================
# SECURITY
# =============================================================================
VITE_ENABLE_HTTPS_ONLY=true
VITE_ENABLE_CSP=true 